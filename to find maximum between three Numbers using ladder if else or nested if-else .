//nested if-else
#include<stdio.h>

int main (){

 int a,b,c;

 printf("Enter 1st number : ");

 scanf("%d",&a);

 printf("Enter 2nd number : ");

 scanf("%d",&b);

 printf("Enter 3rd number : ");

 scanf("%d",&c);

 if(a>c) {

    if(a>b) {

    printf("%d is maximum", a);

    }

    else {

    printf("%d is maximum", b);

    }

    }

    else {

    if(b>c) {

    printf("%d is maximum", b);

    }

    else {

    printf("%d is maximum", c);}

    }

    return 0;

}

